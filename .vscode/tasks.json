{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug -02",
            "type": "shell",
            "command": "/usr/bin/c++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Сборка для отладки с оптимизацией -O2."
        },
