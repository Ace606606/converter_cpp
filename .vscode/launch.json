// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug -00 with warnings",
            "type": "cppdbg",
            "request": "launch",
            //what file
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            // where run
            "cwd": "${fileDirname}",
            //task label
            "preLaunchTask": "build debug -00 with warnings",
            // debug 
            "MIMode": "gdb",
            "externalConsole": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set output-radix 10",
                    "ignoreFailures": true
                },
                {
                    "text": "set print int-values on",
                    "ignoreFailures": true
                },
                {
                    "text": "set confirm off",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug -02",
            "type": "cppdbg",
            "request": "launch",
            //what file
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
